{
    "name": "truffle-token",
    "version": "1.0.0",
    "description": "Development and test repo",
    "author": "szkkteam",
    "scripts": {
        "postinstall": "yarn compile && yarn gen:types",
        "precommit": "yarn prettier:fix && yarn lint:fix",
        "pretest": "yarn compile",
        "test": "mocha --exit --recursive --timeout 10000 -r ts-node/register test/**/*.test.ts",
        "posttest": "yarn coverage && rm -rf ./coverage && rm -rf ./coverage.json",
        "test:ci": "yarn test",
        "coverage": "node ./coverage.js",
        "compile": "truffle compile",
        "compile:all": "truffle compile --all",
        "migrate:bsc": "tsc -p ./tsconfig.json --outDir ./migrations && truffle migrate --network bsc",
        "migrate:bsc-testnet": "tsc -p ./tsconfig.json --outDir ./migrations && truffle migrate --network bsc-testnet",
        "migrate:dev": "tsc -p ./tsconfig.json --outDir ./migrations && truffle migrate --network development",
        "verify:bsc": "truffle run verify Migrations --network bsc",
        "verify:bsc-testnet": "truffle run verify Migrations --network bsc-testnet",
        "flatten": "truffle-flattener ./contracts/MockToken.sol > ./MockToken_flat.sol",
        "gen:types": "typechain --target=truffle-v5 'build/contracts/*.json'",
        "typecheck": "tsc --noEmit",
        "lint": "solhint './contracts/**/*.sol'",
        "lint:fix": "solhint './contracts/**/*.sol' --fix",
        "prettier:fix": "prettier --write 'contracts/**/*.sol'",
        "gen:docs": "solidity-docgen --solc-module solc",
        "size": "truffle run contract-size",
        "ganache": "npx ganache-cli"
    },
    "devDependencies": {
        "@commitlint/cli": "^16.2.3",
        "@commitlint/config-conventional": "^16.2.1",
        "@openzeppelin/contracts": "^4.5.0",
        "@openzeppelin/test-environment": "^0.1.9",
        "@openzeppelin/test-helpers": "^0.5.15",
        "@truffle/hdwallet-provider": "^2.0.4",
        "@typechain/truffle-v5": "^7.0.0",
        "@types/chai": "^4.3.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "^17.0.22",
        "chai": "^4.3.6",
        "dotenv": "^16.0.0",
        "ganache-cli": "^6.12.2",
        "mocha": "^9.2.2",
        "prettier": "^2.6.0",
        "prettier-plugin-solidity": "^1.0.0-beta.19",
        "solc": "^0.8.13",
        "solhint": "^3.3.7",
        "solidity-coverage": "^0.7.20",
        "solidity-docgen": "^0.6.0-beta.7",
        "truffle": "^5.4.3",
        "truffle-contract-size": "^2.0.1",
        "truffle-flattener": "^1.6.0",
        "truffle-plugin-verify": "^0.5.24",
        "truffle-assertions": "^0.9.2",
        "ts-node": "^10.7.0",
        "typechain": "^7.0.1",
        "typescript": "^4.6.2"
    }
}
